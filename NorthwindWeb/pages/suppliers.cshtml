@page
@model NorthwindWeb.Pages.SuppliersModel 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-center bg-dark m-0 p-4 shadow">
    <p class="display-1 text-white lead">Supplier</p>
</div>

    <div class="d-flex flex-wrap justify-content-center row">
        <div class="row"></div>
            @foreach(var i in Model.Suppliers){
                <div class="col-lg-4 col-md-5 col-sm-6">
                    <div class="card-deck shadow m-3 border rounded" style="height:fit-content">
                        <div class="card-header shadow-sm w-100">
                            <p>@i.CompanyName</p>             
                        </div>
                        <div class="card-body p-4">
                            <p class="lead text-muted">City : @i.City</p>
                            <p class="lead text-muted">Address : @i.Address</p>
                        </div>
                        <div class="card-footer">
                            <p>Contect : @i.ContactName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <p class="display-3">Insert new Supplier</p>
    <hr/>

    <form method="POST">
        <div class="container-fluid p-4">
            <div class="row align-items-top justify-content-center">
                <div class="col-md-5">
                    <div class="form-group">
                        <input type="text" class="form-control m-1" placeholder="Company Name" asp-for="Form.CompanyName"/>
                        <input type="text" class="form-control m-1" placeholder="City" asp-for="Form.City"/>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class=form-group>
                        <input type="text" class="form-control m-1" placeholder="Contact Name" asp-for="Form.ContactName"/>
                        <input type="text" class="form-control m-1" placeholder="Address" asp-for="Form.Address"/>
                        <input type="submit" class="btn btn-primary m-1"/>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <hr/>
    
